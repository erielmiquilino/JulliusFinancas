    "Issuer": "JulliusFinancas",
    "Audience": "JulliusFinancas",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 30
  },
  "Smtp": {
    "Host": "",
    "Port": 587,
